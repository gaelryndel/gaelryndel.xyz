---
layout: layouts/default.njk
---
<article class="h-event">

<dl>
  <dt class="visually-hidden">Date</dt>
  <dd class="visually-hidden">
    <time class="dt-start" datetime="{{ start | dateToRfc3339 }}"></time>
    <time class="dt-end" datetime="{{ end | dateToRfc3339 }}"></time>
  </dd>
  <dt class="visually-hidden">Location</dt>
  <dd class=" visually-hidden p-location h-card">
    <span class="p-adr h-adr p-locality">{{ location }}</span>
  </dd>
</dl>

<p><time class="dt-start" datetime="{{ start | dateToRfc3339 }}">{{ start | date("dd.MM.yyyy") }}</time> Â· {{ location }}</p>

<h1 class="p-name">{{ title }}</h1>
<p>{{ summary }}</p>

{{ layoutContent | safe }}

{%- if url %}
  <p><a rel="external" class="u-url" href="{{ url }}">{{ url | hostname }}</a></p>
{%- endif %}

</article>